<?xml version="1.0" encoding="UTF-8"?>
<web-app 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	version="4.0"
>

  <display-name>rims</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <resource-ref>
  	<description>Object factory for MyBean instances.</description>
  	<res-ref-name>jdbc/rims</res-ref-name>
  	<res-type>db.DBConnectionPool</res-type>
  	<res-auth>Container</res-auth>
  </resource-ref>
  
  <resource-ref>
  	<description>Object factory for MyBean instances.</description>
  	<res-ref-name>repo/user</res-ref-name>
  	<res-type>repository.UserRepo</res-type>
  	<res-auth>Container</res-auth>
  </resource-ref>
  <resource-ref>
  	<description>Object factory for MyBean instances.</description>
  	<res-ref-name>service/user</res-ref-name>
  	<res-type>service.UserService</res-type>
  	<res-auth>Container</res-auth>
  </resource-ref>
  
  <resource-ref>
  	<description>Object factory for MyBean instances.</description>
  	<res-ref-name>repo/manager</res-ref-name>
  	<res-type>repository.MangerRepo</res-type>
  	<res-auth>Container</res-auth>
  </resource-ref>
  <resource-ref>
  	<description>Object factory for MyBean instances.</description>
  	<res-ref-name>service/manager</res-ref-name>
  	<res-type>service.MangerService</res-type>
  	<res-auth>Container</res-auth>
  </resource-ref>
  
  <resource-ref>
  	<description>Object factory for MyBean instances.</description>
  	<res-ref-name>repo/employee</res-ref-name>
  	<res-type>repository.EmployeeRepo</res-type>
  	<res-auth>Container</res-auth>
  </resource-ref>
  <resource-ref>
  	<description>Object factory for MyBean instances.</description>
  	<res-ref-name>service/employee</res-ref-name>
  	<res-type>service.EmployeeService</res-type>
  	<res-auth>Container</res-auth>
  </resource-ref>
</web-app>